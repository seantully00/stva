<div>
{{poll.question}}

{{#each poll.choices}}
<h3>{{ @key }} | {{ this }} <button onclick="vote('{{{ ../poll.id }}}','{{{ @key }}}')">+1</button>

{{/each}}

<div id="chart">
    {{chart}}
</div>

<div>
		    <form method="post" action="/poll/" + {{ poll.id }} + "/addchoices" class="createpoll"><br>
                <div name="choices" id="choices">
                	<label>Add new choices (comma-separated):</label>
                    <textarea type="text" name="choices"></textarea>
                </div>
                <input type="submit" value="Submit">
            </form>
		</div>  

<a class="twitter-share-button"
  href="https://twitter.com/intent/tweet?text=https://stvapp.herokuapp.com/poll/{{ poll.id }}">

    
Tweet this Poll</a>


</div>

